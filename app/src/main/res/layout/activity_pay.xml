<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PayActivity"
        tools:deviceIds="wear"
        android:padding="@dimen/box_inset_layout_padding">

    <TextView
            android:text="Total"
            android:layout_width="102dp"
            android:layout_height="44dp" tools:layout_editor_absoluteY="41dp"
            tools:layout_editor_absoluteX="84dp" android:id="@+id/textView8" tools:text="Total"/>
    <EditText
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            tools:layout_editor_absoluteY="101dp" tools:layout_editor_absoluteX="164dp" android:id="@+id/editText"/>
    <EditText
            android:layout_width="141dp"
            android:layout_height="47dp"
            android:inputType="numberDecimal"
            android:ems="10"
            tools:layout_editor_absoluteY="182dp" tools:layout_editor_absoluteX="159dp" android:id="@+id/editText2"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="334dp"
            tools:layout_editor_absoluteX="148dp" android:id="@+id/button6"/>
    <TextView
            android:text="Tip"
            android:layout_width="77dp"
            android:layout_height="37dp" tools:layout_editor_absoluteY="101dp"
            tools:layout_editor_absoluteX="71dp" android:id="@+id/textView9" tools:text="Tip"/>
    <TextView
            android:text="Split"
            android:layout_width="78dp"
            android:layout_height="34dp" tools:layout_editor_absoluteY="189dp"
            tools:layout_editor_absoluteX="70dp" android:id="@+id/textView10" tools:text="Split"/>
    <TextView
            android:text="TextView"
            android:layout_width="102dp"
            android:layout_height="42dp" tools:layout_editor_absoluteY="41dp"
            android:id="@+id/textView11" app:layout_constraintStart_toEndOf="@+id/textView8"
            android:layout_marginStart="16dp"/>
</android.support.constraint.ConstraintLayout>